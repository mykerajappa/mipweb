<!DOCTYPE html>
<html lang="en">
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    var tokens = Antiforgery.GetAndStoreTokens(Context);
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="@(tokens.RequestToken)" />
    <title>@ViewData["Title"] - Marutham Isai Palli</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css"  />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MipWeb.styles.css" asp-append-version="true" />
</head>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
@await Html.PartialAsync("_OtpModal")
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MipWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Enrollment" asp-action="Index">Enroll</a>
                        </li>
                        @using Microsoft.AspNetCore.Authorization
                        @using System.Security.Claims
                        @inject IHttpContextAccessor HttpContextAccessor

                        @{
                            var user = HttpContextAccessor.HttpContext.User;
                        
                            if(user.Identity.IsAuthenticated && user.IsInRole(AppRoles.Admin))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact Us</a>
                            </li>

                            @if(user.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogOut">LogOut</a>
                                </li>
                            }
                            else 
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="modal fade" id="consentModal" tabindex="-1" aria-labelledby="consentModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="consentModalLabel">Please Accept Our Policies</h5>
            </div>
            <div class="modal-body">
                <p>To continue using this site, you need to agree to the following:</p>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="modalAgreePrivacy">
                    <label class="form-check-label" for="modalAgreePrivacy">
                        I agree to the <a href="/Home/Privacy" target="_blank">Privacy Policy</a>.
                    </label>
                </div>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" id="modalAgreeTerms">
                    <label class="form-check-label" for="modalAgreeTerms">
                        I agree to the <a href="/Home/Terms" target="_blank">Terms & Conditions</a>.
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button id="acceptConsentBtn" type="button" class="btn btn-primary" disabled>Accept & Continue</button>
            </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MipWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/OtpModal.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modal = new bootstrap.Modal(document.getElementById("consentModal"));
            const btn = document.getElementById("acceptConsentBtn");
            const privacyCheckbox = document.getElementById("modalAgreePrivacy");
            const termsCheckbox = document.getElementById("modalAgreeTerms");

            function checkConsent() {
                btn.disabled = !(privacyCheckbox.checked && termsCheckbox.checked);
            }

            const path = window.location.pathname.toLowerCase();

            const isConsentPage = path.includes("/privacy") || path.includes("/terms");

            if (!localStorage.getItem("cookiesAccepted") && !isConsentPage) {
                modal.show();
            }

            privacyCheckbox.addEventListener("change", checkConsent);
            termsCheckbox.addEventListener("change", checkConsent);

            btn.addEventListener("click", function () {
                if (privacyCheckbox.checked && termsCheckbox.checked) {
                    localStorage.setItem("cookiesAccepted", "true");
                    modal.hide();
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
