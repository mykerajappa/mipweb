@model MipWeb.ViewModels.UserViewModel

<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel">
                    @(Model.Id == 0 ? "Add New User" : "Edit User")
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form id="userForm" asp-action="@(Model.Id == 0 ? "Create" : "Edit")" asp-controller="User" method="post">
                    @if (Model.Id != 0)
                    {
                        <input type="hidden" name="Id" value="@Model.Id" />
                    }

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="UserId" class="form-label"></label>
                            <input asp-for="UserId" class="form-control" readonly="@(Model.Id != 0)" />
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WhatsappNumber" class="form-label"></label>
                        <input asp-for="WhatsappNumber" class="form-control" />
                        <span asp-validation-for="WhatsappNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Roles</label>
                        <div class="form-check" style="margin-left:10px">
                            @foreach (var role in Model.AllRoles)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role" 
                                           @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
                                    <label class="form-check-label">@role</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div id="modalSpinner" class="spinner-border text-primary me-auto d-none" role="status"></div>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-success" onclick="submitUserForm()">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
